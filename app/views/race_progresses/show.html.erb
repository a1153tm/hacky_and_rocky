}

#race-comments .read dl {
	background:#FFF;
	border-bottom:2px solid #333;
	padding:10px 15px;
}
#race-comments .read dt {
	font-size:120%;
}
#race-comments .read dd {
	margin-top:8px;
	text-align:right;
}
#race-comments .write {
	padding:10px;
	background:#FFF;
}

</style>

